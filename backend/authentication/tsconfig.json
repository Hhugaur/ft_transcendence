{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",        // Required for node_modules module imports
    "resolveJsonModule": true,         // If you import .json files
    "allowSyntheticDefaultImports": true, // To avoid errors with some ES imports
    "skipLibCheck": true,              // Ignore errors in node_modules
    "forceConsistentCasingInFileNames": true // To avoid errors between Windows/Linux
  },
  "include": ["src"]
}

