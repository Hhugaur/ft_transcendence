input.css :
https://tailwindcss.com/docs/dark-mode
@import "tailwindcss";
<!-- ref: CSS -->
@import url("myspecial.font");
<!-- customiser tailwind css -->

@theme {
  <!-- remplace orange-500 devient bleu -->
  <!-- ajouter des classes pour tailwind CSS -->
  --color-orange-500: blue;
  --color-orange-550: red;
  --color-primary: green;
  --color-secondary: orange;
  --breakpoint-3xl: 99rem;
  --spacing-99: 1000rem;
  --font-myspecial: 'myspecial', non-seris;
}

@custom-variant dark (&:where(.dark, .dark *));

<!-- mod style des elements -->
@layer base {
  a {
    text-decoration: underline;
    color: blue;
  }
}

@layer components {
  .btn {
    <!-- evite d'avoir trop de chose dans les class dans le html -->
    @apply code tailwindCSS; 
  }
}

<!-- creer une class utilitaire -->

@utility flex-centered {
  @apply flex justify-center items-center;
}

output.css :
<!-- tailwind css supprimer tout les param par defaut (mode preflight) -->




  <p class="text-3xl font-bold not-italic underline text-yellow-50 bg-black mx-auto my-auto">
